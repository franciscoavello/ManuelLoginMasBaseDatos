<p id="notice"><%= notice %></p>

<h1>Listing Opcions</h1>

<table>
  <thead>
    <tr>
      <th>Opcion</th>
      <th>Opcion valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opcions.each do |opcion| %>
      <tr>
        <td><%= opcion.Opcion_id %></td>
        <td><%= opcion.Opcion_valor %></td>
        <td><%= link_to 'Show', opcion %></td>
        <td><%= link_to 'Edit', edit_opcion_path(opcion) %></td>
        <td><%= link_to 'Destroy', opcion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Opcion', new_opcion_path %>
